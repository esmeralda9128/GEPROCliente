<struts>
    <package name="packSesion" extends="struts-default,json-default,jasperreports-default">
        <action name="vistaLog">
            <result>/login.jsp</result>
        </action>
        <action name="iniciarSesion" class="com.utez.edu.control.ControlLogin" method="loginWeb">
            <result type="json" name="success"/>
            <result name="error" type="json">/login.jsp</result>
        </action>
        <action name="cerrarSesion" class="com.utez.edu.control.ControlLogin" method="logOut">
            <result name="success">/login.jsp</result>
            <result name="error">/login.jsp</result>
        </action>
    
        <action name="reporteNominas" class="com.utez.edu.control.ControlUsuario" method="reporteNominas">
            <result name="success" type="jasper">
                <param name="location">/Reporte/Nominas.jasper</param>
                <param name="dataSource">myList</param>
                <param name="reportParameters">parametros</param>
                <param name="connection">conexion</param>
                <param name="format">PDF</param>
                <param name="context">context</param>
            </result>
        </action>
        
        <action name="reporteMaterialesComprados" class="com.utez.edu.control.ControlUsuario" method="reporteMaterialesComprados">
            <result name="success" type="jasper">
                <param name="location">/Reporte/Materiales.jasper</param>
                <param name="dataSource">myList</param>
                <param name="reportParameters">parametros</param>
                <param name="connection">conexion</param>
                <param name="format">PDF</param>
                <param name="context">context</param>
            </result>
        </action>
    </package>
</struts>
