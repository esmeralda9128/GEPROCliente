<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <!--<constant name="struts.devMode" value="true" />-->

    <package name="basicstruts2" extends="struts-default,json-default">
        <action name="index">
            <result>/login.jsp</result>
        </action>
        <action name="redirect" class="com.utez.edu.control.ControlUsuario" method="redireccion">
            <result name="success">/Vistas/LiderdeProyecto/inicioLiderdeProyecto.jsp</result>
        </action>
       
    </package>
    
    
    <package name="packInter" extends="struts-default">
        <interceptors>
            <interceptor name="sesionValida" class="utez.edu.struts.Interceptor"/>
            <interceptor-stack name="interceptorSesiones">
                <interceptor-ref name="sesionValida"/>
                <interceptor-ref name="defaultStack"/>                
            </interceptor-stack>
        </interceptors>   
        <default-interceptor-ref name="interceptorSesiones"/>
        <global-results>
            <result name="NOLOGIN">
                <param name="location">/login.jsp</param>
            </result>
            <result name="NOPERMISO" type="httpheader">
                <param name="location">/jsp/SinPermisosView.jsp</param>
                <!--<param name="root">"errorResponse"</param>-->
                <param name="status">403</param>
            </result>
        </global-results>
        <action name="prueba">
            <result>/Vistas/redireccion.jsp</result>
        </action>
    </package>
   
    <include file="session.xml"/>
</struts>

