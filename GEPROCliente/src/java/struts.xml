<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="paqueteSesiones" extends="struts-default,json-default">
        <action name="index">
            <result>/login.jsp</result>
        </action>
        <action name="salir" class="actions.sesion" method="cerrarSesion">
            <result>/login.jsp</result>
        </action>
        <action name="entrar" class="actions.sesion" method="entrar">
            <result type="json"></result>
        </action>
    </package>

    
    
    <package name="basicstruts2" extends="struts-default">
        <interceptors>
            <interceptor name="sesionValida" class="utez.edu.struts.Interceptor"/>
            <interceptor-stack name="InterceptorSesiones">
                <interceptor-ref name="sesionValida"/>
                <interceptor-ref name="defaultStack"/>                
            </interceptor-stack>
        </interceptors>   
        <default-interceptor-ref name="InterceptorSesiones"/>
        <global-results>
            <result name="NOLOGIN" type="httpheader">
                <param name="status">401</param>
            </result>
            <result name="NOPERMISO">
                <param name="location">/jsp/SinPermisosView.jsp</param>
                <!--<param name="root">"errorResponse"</param>-->
                <param name="status">403</param>
            </result>
        </global-results>
        
        
    </package>
   
</struts>

